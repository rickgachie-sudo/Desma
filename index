  <script>
    /* YES click */
    function yesClicked(){
      alert("YEEEESSS! ğŸ˜â¤ï¸ Desma umeamua vizuri ğŸ˜‚ğŸŒ¹\nFredrick is now officially your Valentine ğŸ¥°");

      document.body.innerHTML = `
        <div style="text-align:center;font-family:Arial;padding:60px;">
          <h1 style="color:#ff0055;font-size:45px;">Desma said YES! ğŸ˜â¤ï¸</h1>
          <p style="font-size:22px;">Fredrick is smiling like a fool right now ğŸ˜‚ğŸŒ¹</p>
          <p style="font-size:18px;">Happy Valentine my love ğŸ’</p>
        </div>
      `;
    }

    /* NO button senses finger/mouse and runs away */
    const noBtn = document.getElementById("noBtn");
    const btnArea = document.getElementById("btnArea");
    const noMsg = document.getElementById("noMsg");

    const msgs = [
      "Eii Desma ğŸ˜‚ NO imekataa kukubali!",
      "NO?? Unaniambia hivyo na mimi ni Fredrick wako? ğŸ˜­â¤ï¸",
      "Try again babe ğŸ˜˜â€¦ hiyo NO si option.",
      "System error âš ï¸: NO haipatikani ğŸ¤£â¤ï¸",
      "NO blocked by love â¤ï¸ğŸš«",
      "Access denied âŒâ€¦ only YES allowed ğŸ˜",
      "NO button inakukimbia juu inajua ukweli ğŸ˜˜ğŸ˜‚",
      "Last chance ğŸ˜¤â¤ï¸â€¦ chagua YES basi."
    ];

    function randomMsg(){
      return msgs[Math.floor(Math.random() * msgs.length)];
    }

    function showNoMsg(){
      noMsg.innerText = randomMsg();
      noMsg.style.animation = "none";
      noMsg.offsetHeight; // restart animation
      noMsg.style.animation = "fadeIn 0.2s ease";
    }

    function moveNoButton(){
      const areaRect = btnArea.getBoundingClientRect();
      const btnRect = noBtn.getBoundingClientRect();

      const maxX = areaRect.width - btnRect.width;
      const maxY = 140;

      const x = Math.floor(Math.random() * (maxX + 1));
      const y = Math.floor(Math.random() * (maxY + 1));

      noBtn.style.position = "absolute";
      noBtn.style.left = x + "px";
      noBtn.style.top = y + "px";
      noBtn.style.transition = "0.12s";
    }

    // PC: when mouse comes near
    noBtn.addEventListener("mouseenter", () => {
      showNoMsg();
      moveNoButton();
    });

    // Phone: when finger touches
    noBtn.addEventListener("touchstart", (e) => {
      e.preventDefault();
      showNoMsg();
      moveNoButton();
    });

    // Extra: if she almost clicks it
    noBtn.addEventListener("pointerdown", (e) => {
      e.preventDefault();
      showNoMsg();
      moveNoButton();
    });

    /* Floating hearts generator */
    const heartsContainer = document.getElementById("hearts");

    function createHeart(){
      const heart = document.createElement("div");
      heart.classList.add("heart-float");

      const heartTypes = ["â¤ï¸","ğŸ’–","ğŸ’•","ğŸ’˜","ğŸ’—"];
      heart.innerHTML = heartTypes[Math.floor(Math.random()*heartTypes.length)];

      heart.style.left = Math.random() * 100 + "vw";
      heart.style.fontSize = (Math.random() * 20 + 15) + "px";
      heart.style.animationDuration = (Math.random() * 3 + 4) + "s";

      heartsContainer.appendChild(heart);

      setTimeout(() => {
        heart.remove();
      }, 8000);
    }

    setInterval(createHeart, 400);

    /* Background music play/pause */
    const music = document.getElementById("bgMusic");
    const musicBtn = document.getElementById("musicBtn");
    let isPlaying = false;

    musicBtn.addEventListener("click", async () => {
      if(!isPlaying){
        try{
          await music.play();
          isPlaying = true;
          musicBtn.innerText = "Pause Music â¸ï¸";
        }catch(err){
          noMsg.innerText = "Tap again to allow music ğŸ¶";
        }
      }else{
        music.pause();
        isPlaying = false;
        musicBtn.innerText = "Play Music ğŸ¶";
      }
    });
  </script>

